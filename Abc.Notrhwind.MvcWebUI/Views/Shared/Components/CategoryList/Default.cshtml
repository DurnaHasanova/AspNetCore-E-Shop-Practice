@model   Abc.Notrhwind.MvcWebUI.Models.CategoryListViewModel


<div class="list-group">
	@foreach (var item in Model.Categories)
	{
		var css = "list-group-item";
		@if (item.CategoryId == Model.CurrentCategory)
		{
			css+= " active";
		}
		<a  href="/Product/Index?category=@item.CategoryId" class="list-group-item @css">@item.CategoryName</a>
	}
</div>